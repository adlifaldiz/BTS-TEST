<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <stroke android:width="2dp" android:color="@color/colorPrimaryDark" />
                    <solid android:color="@color/background_default_layout" />
                    <corners android:bottomRightRadius="5dp"
                        android:topRightRadius="5dp"/>
                </shape>
            </item>
            <item android:right="2dp" android:bottom="2dp" android:top="2dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/background_default_layout" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_focused="false">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <stroke android:width="1dp" android:color="@color/secondaryText" />
                    <solid android:color="@color/background_default_layout" />
                    <corners android:bottomRightRadius="5dp"
                        android:topRightRadius="5dp"/>
                </shape>
            </item>

            <item android:right="2dp" android:bottom="2dp" android:top="2dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/background_default_layout" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>